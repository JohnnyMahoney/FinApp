<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.thirdPage.BlankFragment3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="ADD"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/variableEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#25383C"
        android:textSize="20dp"
        android:fontStyle="italic"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttons_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variableEditText"
        android:stretchColumns="*"
        > <!-- collapse the first column of the table row-->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="2"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="3"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="5"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="6"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="7"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="8"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="9"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="."/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="0"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="18dip"
                android:text="-"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons_view" />



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

    </RadioGroup>

    <RadioButton
        android:id="@+id/outcomeRadioButton"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginTop="593dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Outcome"
        android:textColor="#25383C"
        android:fontStyle="italic"
        tools:ignore="MissingConstraints"
         />

    <RadioButton
        android:id="@+id/incomeRadioButton"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="565dp"
        android:text="Income"
        android:textColor="#25383C"
        android:fontStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
         />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="620dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Clear"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>